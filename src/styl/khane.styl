.khane
  min-height: 100vh


.home-box
  background-color: rgb(0, 0, 0)
  border: 3px solid rgb(208, 208, 208)
  border-radius: 0.5rem
  padding: 0.5rem

.home-middle
  display: flex
  flex-flow: row wrap
  justify-content: space-between
  background-color: rgb(24, 0, 64)
  padding: 0.5rem
  .enter-gates
    display: flex
    flex-flow: column
    justify-content: space-between
    text-align: center
    .with-icon
      flex: 3
      display: flex
      flex-flow: row wrap
      justify-content: space-between
      align-items: center
      justify-content: center
      .text
        flex: 3
        color: rgb(254, 225, 36)
        h3
          font-size: 2.5rem
        h2
          font-size: 4rem
      img
        flex: 1
        height: 90%
    .en-gates
      flex: 1

  .middle-col-1
    width: 20%
    display: flex
    flex-flow: column
    .illigal-wares
      flex: 2
      display: flex
      flex-flow: column
      justify-content: space-between
      align-items: center
      align-content: center
      text-align: center
      padding: 2.5rem 1rem
      .illigal-col-1
        flex: 1
        display: flex
        flex-flow: column
        align-items: center
        justify-content: center
      .illigal-col-2
        flex: 4
        display: flex
        flex-flow: column
        align-items: center
        justify-content: center
        img
          height: 60%
      .illigal-col-3
        flex: 1
        display: flex
        flex-flow: column
        align-items: center
        justify-content: center
      h2
        color: rgb(254, 225, 36)
        font-size: 4rem
    .enter-men
      flex: 1
  .middle-col-2
    width: 59%
    display: flex
    flex-flow: column
    .video-player
      flex: 5
      display: flex
      flex-flow: column
      align-items: center
      justify-content: center
      overflow: hidden
      img
        width: 105%
    .gates
      flex: 1
      display: flex
      .enters
        flex: 1
        margin-left: 0.2rem
        height: 100%
        text-align: center
        font-size: 2.5rem
        padding-top: 1.5rem
        background-color: rgb(87, 87, 87)
        color: rgb(209, 209, 209)
        cursor: pointer
        &:last-child
          margin-left: 0
      .active-enter
        background-color: rgb(0, 0, 0)
        color: rgb(0, 214, 124)

  .middle-col-3
    width: 20%
    display: flex
    flex-flow: column
    .weather
      flex: 1
      margin-bottom: 0.2rem
      color: rgb(0, 0, 0)
      display: flex
      flex-flow: row
      justify-content: space-between
      align-items: center
      justify-content: center
      text-align: center
      .weather-icon-wraper
        flex: 2
      .city-details
        flex: 3
        color: rgb(254, 225, 36)
        h2
          font-size: 3rem
        h1
          font-size: 4rem
    .oghat
      flex: 3
      margin-bottom: 0.2rem
      color: rgb(254, 225, 36)
      text-align: center
      h2
        font-size: 4rem
      .oghat-date
        font-size: 1.5rem
        margin-bottom: 2rem
        margin-top: 1rem
      .oghat-details
        display: flex
        flex-flow: row wrap
        justify-content: space-between
        align-items: center
        justify-content: center
        font-size: 2rem
        .oghat-detail-1
          width: 59%
          text-align: left
          height: 3.2rem
          color: white
        .oghat-detail-2
          width: 37%
          margin-right: 4%
          text-align: right
          height: 3.2rem
          color: white

    .enter-women
      flex: 2

  .middle-box
    width: 100%
    margin: 0 0 0.2rem 0.2rem
    &:last-child
      margin-bottom: 0
