html
	direction: rtl
	font-family: 'Shabnam', Tahoma, sans-serif !important
	max-width: 100%
	overflow-x: hidden
	box-sizing border-box
	button,
	input,
	optgroup,
	select,
	textarea
  	font-family: 'Shabnam', Tahoma, sans-serif !important

*
	box-sizing inherit
	&:before
		box-sizing inherit
	&:after
		box-sizing inherit

h1, h2, h3, h4, p, a
	margin 0

body
	color: white
	direction: rtl
	font-family: 'Vazir', Tahoma, Verdana, Segoe, sans-serif !important
	margin: 0
	padding: 0
	max-width: 100%
	overflow-x: hidden
	.aksback
		background:url('../img/back/01.jpg') no-repeat center
		background-size:cover
		background-attachment: fixed
		filter: blur(8px) grayscale(40%)
		position:fixed
		width:100%
		height:100%
		top: 0
		bottom: 0
		left: 0
		right: 0
		z-index: -9


.lafaf
	display: flex
	flex-flow: row wrap
	justify-content center
	overflow: hidden
	width: 100%
	color: #605f5f
	min-height: 44rem

.lafaf-100
	width: 100%

.back-abi
	background-color: abi(1)
	color: rgb(255, 255, 255)
	// padding: 2rem
	height: 10rem
	flex-basis: 100%
	display: flex
	flex-flow: row wrap
	justify-content: center
	align-items: center

.lafaf-80
	flex-basis 92%
	z-index 9
	padding: 2rem
	justify-content: center
	align-content: center

.fasbaghal
	margin-right: 5rem

.cf
	*zoom 1
	&:after,
	&:before
		content ''
		display table
	&:after
		clear: both

.navbar
	width 100%
	min-height: 7rem
	margin 0 auto
	text-align center
	background-color: abi(1)
	border-bottom: 2px solid sorme(1)
	display: flex
	flex-flow: row wrap
	justify-content: center
	align-items: center
	.arm
		width: 25%
		text-align: left
		// height: 3rem
		border-radius: 0.4rem
		>img
			width: 6rem
			height: 6rem
			margin-left: 6rem
	nav
		margin 0
		padding 0
		width 70%
		display flex
		flex-flow: row wrap
		align-content center
		span
			display: block
			@media(min-width 700px)
				display: none
		a
			flex-basis: 100%
			display: none
			@media(min-width 700px)
				flex-basis: 20%
				display: block
				margin-bottom: 0.5rem
			@media(min-width 990px)
				flex-basis: 11%
				display: block
			color white
			text-decoration none
			font-size 1rem
			line-height 2.2
			border-radius: 0.2rem
			background-color: darken(abi(1), 40%)
			margin-left: 0.5rem
			&:last-child
				margin-left: 0
				background-color: darken(sabz(1), 50%)
				&:hover
					background-color: darken(ghermez(1), 50%)
			&:hover
				background-color darken(abi(0.6), 90%)
		.menu-icon
			color: rgb(255, 255, 255)
			font-size: 2rem
			padding-right: 45%
			cursor: pointer

